programa
{
	/*Faça um programa que peça o raio de um círculo, calcule e mostre sua área.
	 * 
	 */
	funcao inicio()
	{
		inteiro raio
		inteiro area

		escreva("escreva o raio do circulo: ")
		leia(raio)
		
		area = 3.14 * (raio * raio)

		escreva("\n o valor da area de circulo é de: ",area, "\n")

	
		
	
		
		
	}
}
